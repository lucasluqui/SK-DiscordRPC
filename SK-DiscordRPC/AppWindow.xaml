<Window x:Class="SK_DiscordRPC.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:SK_DiscordRPC"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Visibility="Hidden">

    <Grid>
        <tb:TaskbarIcon x:Name="TrayIcon" IconSource="/Resources/tray.ico" ToolTipText="Knight Launcher Discord RPC module">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="ShowKnightItem" Header="Show knight name" Click="ShowKnight_Click" IsChecked="False"/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>

</Window>
